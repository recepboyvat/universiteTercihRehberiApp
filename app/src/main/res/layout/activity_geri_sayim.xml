<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GeriSayimActivity"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff"
        android:orientation="vertical">
        <View
            android:layout_width="match_parent"
            android:layout_marginHorizontal="15dp"
            android:layout_height="1dp"
            android:layout_marginVertical="40dp"
            android:background="#fff"
            ></View>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="15dp"
            android:background="#D30016">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TYT SAYACI"
                android:background="#D30016"
                android:textColor="#fff"
                android:textStyle="bold"
                android:textSize="45dp"
                ></TextView>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal">

            <TextView
                android:id="@+id/tytGunTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="35dp"
                android:textColor="#000"
                android:text="35"
></TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gün"
                ></TextView>
            <TextView
                android:id="@+id/tytSaatTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="35dp"
                android:textColor="#000"
                android:text="16"
                ></TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Saat"
                ></TextView>
            <TextView
                android:id="@+id/tytDakikaTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="35dp"
                android:textColor="#000"
                android:text="20"
                ></TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dakika"
                ></TextView>

            </LinearLayout>
        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_marginHorizontal="15dp"
            android:layout_height="1dp"
            android:layout_marginVertical="40dp"
            android:background="#D30016"
            ></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="15dp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="AYT SAYACI"
                android:textAlignment="center"
                android:background="#D30016"
                android:textColor="#fff"
                android:textStyle="bold"
                android:textSize="45dp"
                ></TextView>

            <LinearLayout
                android:layout_marginVertical="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal">

                    <TextView
                        android:id="@+id/aytGunTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="35dp"
                        android:textColor="#000"
                        android:text="35"
                        ></TextView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Gün"
                        ></TextView>
                    <TextView
                        android:id="@+id/aytSaatTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="35dp"
                        android:textColor="#000"
                        android:text="16"
                        ></TextView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Saat"
                        ></TextView>
                    <TextView
                        android:id="@+id/aytDakikaTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="35dp"
                        android:textColor="#000"
                        android:text="20"
                        ></TextView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dakika"
                        ></TextView>

                </LinearLayout>
            </LinearLayout>



    </LinearLayout>


</LinearLayout>
</LinearLayout>